{
  "editor.selectionHighlight": false,
  "editor.fontFamily": "FiraCode Nerd Font, Hack Nerd Font, Menlo, Monaco, 'Courier New', monospace",
  "debug.console.fontFamily": "FiraCode Nerd Font, Hack Nerd Font, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "selection",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.wordWrap": "off",
  "editor.tabCompletion": "on",
  "editor.cursorBlinking": "smooth",
  "editor.suggest.localityBonus": true,
  "explorer.confirmDragAndDrop": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.enablePreview": false,
  "workbench.sideBar.location": "right",
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "City Lights",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.files.associations": {
    ".nycrc.yaml": "istanbul"
  },
  "material-icon-theme.folders.associations": {
    "unit": "test",
    "integration": "test"
  },
  "breadcrumbs.enabled": true,
  "problems.showCurrentInStatus": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.vscode": true,
    "**/venv": true,
    "**/.mypy_cache": true,
    "**/*.egg-info": true,
    "**/.pytest_cache": true,
    "**/.coverage*": true,
    "**/cov.xml": true,
    "**/junit.xml": true,
    "**/*.lock": true,
    "**/*.scannerwork": true
  },
  // INTEGRATED TERMINAL
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  // JSON
  "files.associations": {
    "*.json": "jsonc"
  },
  // PYTHON
  "[python]": {
    "editor.formatOnPaste": true,
    "editor.rulers": [
      88
    ]
  },
  "python.autoComplete.addBrackets": true,
  "python.venvPath": "~/.pyenv",
  "python.linting.pylintArgs": [
    "--max-line-length=88",
    "--disable=C0301"
  ],
  "python.linting.banditArgs": [
    "-r",
    "-ll"
  ],
  "python.testing.pytestEnabled": true,
  "python.formatting.provider": "black",
  // Javascript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.format.enable": false, // Let eslint handle everything!
  "javascript.validate.enable": false,
  "eslint.alwaysShowStatus": true,
  // Others
  "remote.SSH.configFile": "~/.ssh/personal.config",
  "bashIde.highlightParsingErrors": false
}